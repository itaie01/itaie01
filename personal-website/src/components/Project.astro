---
    import Tag from "./Tag.astro";
    import { Image } from 'astro:assets';
    const { projectObj } = Astro.props;
---

<div class="pt-[10rem] px-[4rem] mx-[2rem] font-display max-w-[22rem] text-nordDark0 dark:text-nordLight0">
    <div class="hover:shadow-xl transition-shadow">
        <div class="border-solid border-8 border-nordLight2 dark:border-nordDark2 project-pixel-corners font-pixel text-lg text-wrap dark:text-nordLight0 px-[0.5rem] py-[0.5rem]">
            <Image src={projectObj.src} alt={projectObj.alt} />
        </div>
        <div class="border-l-8 border-b-8 border-r-8 border-solid border-nordLight2 dark:border-nordDark2 pixel-corners-bottom px-[0.5rem] py-[0.5rem]">
            <div class="font-bold text-lg hover:underline">
                <a href={projectObj.link} class="cursor-pointer">{projectObj.title}</a>
            </div>
            <div class="text-base text-nordDark1 dark:text-nordLight2 cursor-text">
                {projectObj.description}
            </div>
            {projectObj.tags.map(tag => <Tag text={tag} />)}
        </div>
    </div>
   
</div>